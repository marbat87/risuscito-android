<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:risuscito="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_min_margin"
    android:paddingRight="@dimen/activity_min_margin" >

    <com.melnykov.fab.ObservableScrollView
        android:id="@+id/eucarestiaScrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:overScrollMode="never"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/canto_iniziale"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <RelativeLayout
                android:id="@+id/addCantoIniziale1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                android:minHeight="@dimen/list_preferred_item_height_small"
                android:orientation="horizontal"
                android:background="?attr/customSelector" >

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/add_inizio"
                    android:src="?customInsertItem" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/imageView6"
                    android:text="@string/select_canto"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/cantoIniziale1Container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/customSelector"
                android:minHeight="@dimen/myListPreferredItemHeightMedium"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cantoIniziale1Page"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/myListPreferredItemMargin"
                    android:layout_marginStart="@dimen/myListPreferredItemMargin"
                    android:background="@drawable/bkg_round_blue" />

                <TextView
                    android:id="@+id/cantoIniziale1Text"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:textSize="16sp"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/myListPreferredTextMarginStart"
                    android:layout_marginStart="@dimen/myListPreferredTextMarginStart"
                    android:layout_marginRight="@dimen/myListPreferredItemMargin"
                    android:layout_marginEnd="@dimen/myListPreferredItemMargin" />

            </RelativeLayout>

            <include layout="@layout/preferences_separator" />

            <LinearLayout
                android:id="@+id/groupCantoSeconda"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/seconda_lettura"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <RelativeLayout
                    android:id="@+id/addCantoSeconda"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:clickable="true"
                    android:minHeight="@dimen/list_preferred_item_height_small"
                    android:orientation="horizontal"
                    android:background="?attr/customSelector" >

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/add_seconda"
                        android:src="?customInsertItem" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/imageView7"
                        android:text="@string/select_canto"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/cantoSecondaContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/customSelector"
                    android:minHeight="@dimen/myListPreferredItemHeightMedium"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/cantoSecondaPage"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:textAppearance="?attr/textAppearanceListItem"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/myListPreferredItemMargin"
                        android:layout_marginStart="@dimen/myListPreferredItemMargin"
                        android:background="@drawable/bkg_round_blue" />

                    <TextView
                        android:id="@+id/cantoSecondaText"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?attr/textAppearanceListItem"
                        android:textSize="16sp"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="@dimen/myListPreferredTextMarginStart"
                        android:layout_marginStart="@dimen/myListPreferredTextMarginStart"
                        android:layout_marginRight="@dimen/myListPreferredItemMargin"
                        android:layout_marginEnd="@dimen/myListPreferredItemMargin" />

                </RelativeLayout>

                <include layout="@layout/preferences_separator" />

            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/canto_pace"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <RelativeLayout
                android:id="@+id/addCantoPace"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                android:minHeight="@dimen/list_preferred_item_height_small"
                android:orientation="horizontal"
                android:background="?attr/customSelector" >

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/add_pace"
                    android:src="?customInsertItem" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/imageView8"
                    android:text="@string/select_canto"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/cantoPaceContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/customSelector"
                android:minHeight="@dimen/myListPreferredItemHeightMedium"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cantoPagePage"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/myListPreferredItemMargin"
                    android:layout_marginStart="@dimen/myListPreferredItemMargin"
                    android:background="@drawable/bkg_round_blue" />

                <TextView
                    android:id="@+id/cantoPaceText"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:textSize="16sp"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/myListPreferredTextMarginStart"
                    android:layout_marginStart="@dimen/myListPreferredTextMarginStart"
                    android:layout_marginRight="@dimen/myListPreferredItemMargin"
                    android:layout_marginEnd="@dimen/myListPreferredItemMargin" />

            </RelativeLayout>

            <include layout="@layout/preferences_separator" />

            <LinearLayout
                android:id="@+id/groupSanto"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/santo"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <RelativeLayout
                    android:id="@+id/addSanto"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:clickable="true"
                    android:minHeight="@dimen/list_preferred_item_height_small"
                    android:orientation="horizontal"
                    android:background="?attr/customSelector" >

                    <ImageView
                        android:id="@+id/imageView12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/add_seconda"
                        android:src="?customInsertItem" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/imageView12"
                        android:text="@string/select_canto"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/santoContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/customSelector"
                    android:minHeight="@dimen/myListPreferredItemHeightMedium"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/santoPage"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:textAppearance="?attr/textAppearanceListItem"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/myListPreferredItemMargin"
                        android:layout_marginStart="@dimen/myListPreferredItemMargin"
                        android:background="@drawable/bkg_round_blue" />

                    <TextView
                        android:id="@+id/santoText"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?attr/textAppearanceListItem"
                        android:textSize="16sp"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="@dimen/myListPreferredTextMarginStart"
                        android:layout_marginStart="@dimen/myListPreferredTextMarginStart"
                        android:layout_marginRight="@dimen/myListPreferredItemMargin"
                        android:layout_marginEnd="@dimen/myListPreferredItemMargin" />

                </RelativeLayout>

                <include layout="@layout/preferences_separator" />

            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/canto_pane"
                android:textAppearance="?android:attr/textAppearanceLarge"/>

            <!--<LinearLayout-->
                <!--android:id="@+id/cantiPaneList"-->
                <!--android:layout_width="fill_parent"-->
                <!--android:orientation="vertical"-->
                <!--android:layout_height="wrap_content" />-->
            <android.support.v7.widget.RecyclerView
                android:layout_width= "match_parent"
                android:layout_height = "wrap_content"
                android:id="@+id/cantiPaneList" />

            <RelativeLayout
                android:id="@+id/addCantoPane"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                android:minHeight="@dimen/list_preferred_item_height_small"
                android:orientation="horizontal"
                android:background="?attr/customSelector" >

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/add_pane"
                    android:src="?customInsertItem" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/imageView9"
                    android:text="@string/select_canto"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

            </RelativeLayout>

            <include layout="@layout/preferences_separator" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/canto_vino"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <!--<LinearLayout-->
                <!--android:id="@+id/cantiVinoList"-->
                <!--android:layout_width="fill_parent"-->
                <!--android:orientation="vertical"-->
                <!--android:layout_height="wrap_content" />-->
            <android.support.v7.widget.RecyclerView
                android:layout_width= "match_parent"
                android:layout_height = "wrap_content"
                android:id="@+id/cantiVinoList" />

            <RelativeLayout
                android:id="@+id/addCantoVino"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                android:minHeight="@dimen/list_preferred_item_height_small"
                android:orientation="horizontal"
                android:background="?attr/customSelector" >

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/add_vino"
                    android:src="?customInsertItem" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/imageView10"
                    android:text="@string/select_canto"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

            </RelativeLayout>

            <include layout="@layout/preferences_separator" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/canto_fine"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <RelativeLayout
                android:id="@+id/addCantoFinale1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                android:minHeight="@dimen/list_preferred_item_height_small"
                android:orientation="horizontal"
                android:background="?attr/customSelector" >

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/add_fine"
                    android:src="?customInsertItem" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/imageView11"
                    android:text="@string/select_canto"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/cantoFinale1Container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/customSelector"
                android:minHeight="@dimen/myListPreferredItemHeightMedium"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cantoFinale1Page"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/myListPreferredItemMargin"
                    android:layout_marginStart="@dimen/myListPreferredItemMargin"
                    android:background="@drawable/bkg_round_blue" />

                <TextView
                    android:id="@+id/cantoFinale1Text"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:textSize="16sp"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/myListPreferredTextMarginStart"
                    android:layout_marginStart="@dimen/myListPreferredTextMarginStart"
                    android:layout_marginRight="@dimen/myListPreferredItemMargin"
                    android:layout_marginEnd="@dimen/myListPreferredItemMargin" />

            </RelativeLayout>

            <include layout="@layout/preferences_separator" />

        </LinearLayout>

    </com.melnykov.fab.ObservableScrollView>

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/fab_eucarestia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/floating_margin_lateral"
        android:src="@drawable/ic_icon_broom"
        risuscito:fab_colorNormal="@color/theme_accent"
        risuscito:fab_colorPressed="@color/theme_accent_dark"
        risuscito:fab_colorRipple="@color/theme_accent_dark"/>

</FrameLayout>
                            android:scaleType="center"
                            android:text="@string/select_canto"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/terzaLetturaContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/customSelector"
                        android:minHeight="@dimen/myListPreferredItemHeightMedium"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/terzaLetturaPage"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:textAppearance="?attr/textAppearanceListItem"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:layout_marginLeft="@dimen/cardListPreferredItemMargin"
                            android:layout_marginStart="@dimen/cardListPreferredItemMargin"
                            android:background="@drawable/bkg_round_blue" />

                        <TextView
                            android:id="@+id/terzaLetturaText"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceListItem"
                            android:textSize="16sp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/cardListPreferredTextMarginStart"
                            android:layout_marginStart="@dimen/cardListPreferredTextMarginStart"
                            android:layout_marginRight="@dimen/cardListPreferredItemMargin"
                            android:layout_marginEnd="@dimen/cardListPreferredItemMargin" />

                    </RelativeLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/groupCantoPace"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                risuscito:cardUseCompatPadding="true"
                risuscito:cardCornerRadius="@dimen/cardListElevation"
                risuscito:cardElevation="@dimen/cardListElevation"
                android:visibility="gone">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="@string/canto_pace"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                    <RelativeLayout
                        android:id="@+id/addCantoPace"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:clickable="true"
                        android:minHeight="@dimen/myListPreferredItemHeightMedium"
                        android:orientation="horizontal"
                        android:background="?attr/customSelector" >

                        <ImageView
                            android:id="@+id/imageView6"
                            android:layout_centerVertical="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="@dimen/cardListPreferredItemMargin"
                            android:layout_marginStart="@dimen/cardListPreferredItemMargin"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:scaleType="center"
                            android:contentDescription="@string/add_pace"
                            android:src="?customInsertItem" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="@dimen/cardListPreferredTextMarginStart"
                            android:layout_marginStart="@dimen/cardListPreferredTextMarginStart"
                            android:scaleType="center"
                            android:text="@string/select_canto"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/cantoPaceContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/customSelector"
                        android:minHeight="@dimen/myListPreferredItemHeightMedium"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/cantoPacePage"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"

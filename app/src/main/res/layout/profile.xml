<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="?actionBarSize"
    android:layout_height="?actionBarSize"
    android:clickable="true"
    android:clipToPadding="false"
    android:focusable="true"
    android:paddingStart="@dimen/activity_min_margin"
    android:paddingEnd="@dimen/myListPreferredItemMargin"
    android:soundEffectsEnabled="true">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profile_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/account_circle_56px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Risuscito.CornerSize50Percent" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Widget.Risuscito.Button.TextButton.Icon" parent="Widget.Material3.Button.TextButton.Icon">
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="Widget.Risuscito.Button.TextButton.Left" parent="Widget.Material3.Button.TextButton">
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="TitoloSezione" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:paddingStart">@dimen/abc_action_bar_content_inset_material</item>
        <item name="android:paddingEnd">@dimen/abc_action_bar_content_inset_material</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="Widget.Risuscito.Toolbar.InAppBarLayout" parent="Widget.Material3.Toolbar">
        <item name="android:elevation">0dp</item>
    </style>

    <style name="Widget.Risuscito.TabLayout" parent="Widget.Material3.TabLayout">
        <item name="tabGravity">start</item>
        <item name="tabMode">scrollable</item>
    </style>

    <style name="BottomSheet" />

    <style name="BottomSheet.Title">
        <item name="android:textAlignment" tools:ignore="NewApi">viewStart</item>
        <item name="android:singleLine">true</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?textAppearanceTitleMedium</item>
        <item name="fontFamily">?risuscito_medium_font</item>
        <item name="android:fontFamily">?risuscito_medium_font</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="BottomSheet.GridItemImage">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="BottomSheet.GridItemTitle">
        <item name="android:height">16dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAppearance">?textAppearanceBodySmall</item>
        <item name="fontFamily">?risuscito_regular_font</item>
        <item name="android:fontFamily">?risuscito_regular_font</item>
        <item name="android:textColor">?android:textColorHint</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="BottomSheet.GridItem">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Material3.BottomSheet.Modal">
        <item name="behavior_peekHeight">@dimen/custom_peek_height</item>
    </style>

    <style name="Risuscito_SpeedDialActionItem">
        <item name="colorOnSecondary">?colorOnSecondaryContainer</item>
    </style>

    <style name="Risuscito_SpeedDialMainFab">
        <item name="sdMainFabAnimationRotateAngle">90</item>
        <item name="sdMainFabClosedBackgroundColor">?colorPrimaryContainer</item>
        <item name="sdMainFabClosedIconColor">?colorOnPrimaryContainer</item>
        <item name="sdMainFabOpenedBackgroundColor">?colorPrimary</item>
        <item name="sdMainFabOpenedIconColor">?colorOnPrimary</item>
        <item name="sdMainFabOpenedSrc">@drawable/close_24px</item>
    </style>

    <macro name="m3_ref_typeface_brand_medium">?risuscito_medium_font</macro>
    <macro name="m3_ref_typeface_brand_regular">?risuscito_regular_font</macro>
    <macro name="m3_ref_typeface_plain_medium">?risuscito_medium_font</macro>
    <macro name="m3_ref_typeface_plain_regular">?risuscito_regular_font</macro>

</resources>

<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.Risuscito.Button.TextButton.Icon" parent="Widget.Material3.Button.TextButton.Icon">
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="Widget.Risuscito.Button.TextButton.Left" parent="Widget.Material3.Button.TextButton">
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="TitoloSezione" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:paddingStart">@dimen/abc_action_bar_content_inset_material</item>
        <item name="android:paddingEnd">@dimen/abc_action_bar_content_inset_material</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="Widget.Risuscito.Toolbar.InAppBarLayout" parent="Widget.Material3.Toolbar">
        <item name="android:elevation">0dp</item>
    </style>

    <style name="Widget.Risuscito.TabLayout" parent="Widget.Material3.TabLayout">
        <item name="tabGravity">start</item>
        <item name="tabMode">scrollable</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Material3.BottomSheet.Modal">
        <item name="behavior_peekHeight">@dimen/custom_peek_height</item>
    </style>

    <style name="Risuscito_SpeedDialActionItem">
        <item name="colorOnSecondary">?colorOnSecondaryContainer</item>
    </style>

    <style name="Risuscito_SpeedDialMainFab">
        <item name="sdMainFabAnimationRotateAngle">90</item>
        <item name="sdMainFabClosedBackgroundColor">?colorPrimaryContainer</item>
        <item name="sdMainFabClosedIconColor">?colorOnPrimaryContainer</item>
        <item name="sdMainFabOpenedBackgroundColor">?colorPrimary</item>
        <item name="sdMainFabOpenedIconColor">?colorOnPrimary</item>
        <item name="sdMainFabOpenedSrc">@drawable/close_24px</item>
    </style>

    <macro name="m3_ref_typeface_brand_medium">?risuscito_medium_font</macro>
    <macro name="m3_ref_typeface_brand_regular">?risuscito_regular_font</macro>
    <macro name="m3_ref_typeface_plain_medium">?risuscito_medium_font</macro>
    <macro name="m3_ref_typeface_plain_regular">?risuscito_regular_font</macro>

</resources>

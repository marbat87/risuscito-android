<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.MyTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Set AppCompat’s actionBarStyle -->
        <!--     <item name="actionBarStyle">@style/MyActionBarStyle</item> -->

        <!-- Set AppCompat’s color theming attrs -->
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>

        <!-- colorAccent is used as the default value for colorControlActivated,
            which is used to tint widgets -->
        <item name="colorAccent">@color/theme_accent</item>
        <item name="colorControlHighlight">@color/theme_accent_semi_tr</item>
        <item name="colorControlNormal">@color/dialtacts_secondary_text_color</item>
        <item name="colorControlActivated">@color/theme_accent_semi_tr</item>

        <!-- The rest of your attributes -->
        <item name="customHelp">@drawable/ic_action_help</item>
        <item name="customInsertItem">@drawable/ic_fa_plus_circle_dark</item>
        <item name="alertDialogProTheme">@style/AppTheme.FlavoredMaterialLight</item>
        <item name="customSelector">@drawable/custom_list_selector</item>
        <item name="customSelectorTab">@drawable/custom_tab_selector</item>
        <item name="customSelectorRound">@drawable/custom_selector_round</item>
        <item name="customSelectorRoundAccent">@drawable/custom_selector_round_accent</item>
        <item name="android:fastScrollThumbDrawable" tools:targetApi="HONEYCOMB">@drawable/fastscroll_thumb_material</item>
        <item name="android:fastScrollTextColor" tools:targetApi="HONEYCOMB">@android:color/white</item>
        <item name="android:fastScrollPreviewBackgroundRight" tools:targetApi="HONEYCOMB">@drawable/fastscroll_label_right_material</item>
        <item name="android:fastScrollPreviewBackgroundLeft" tools:targetApi="HONEYCOMB">@drawable/fastscroll_label_left_material</item>
        <item name="android:fastScrollTrackDrawable" tools:targetApi="HONEYCOMB">@drawable/fastscroll_track_material</item>
    </style>

    <style name="RisuscitoTheme" parent="Theme.MyTheme" >
        <item name="toolbar_shadow">@drawable/toolbar_shadow</item>
    </style>

    <style name="RisuscitoTheme.WithNavDrawer" parent="RisuscitoTheme" />

</resources>

<?xml version="1.0" encoding="utf-8"?>
<io.codetail.widget.RevealFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/toolbar_height">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/button"
        android:src="@drawable/ic_add_24dp"
        android:layout_gravity="end|top"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginRight="@dimen/tb_button_margin_end"
        android:layout_marginTop="@dimen/tb_button_margin_top"
        app:elevation="@dimen/design_fab_elevation"
        app:pressedTranslationZ="@dimen/design_fab_translation_z_pressed" />

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:visibility="invisible"
        android:elevation="@dimen/elevation" />

</io.codetail.widget.RevealFrameLayout>